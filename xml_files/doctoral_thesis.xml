<doctoral_thesis>

       <form>
            
			<!-- general -->
			<field name="document_type" mandatory="yes" />
			<field name="licence_type" mandatory="yes" />
			<field name="pod_allowed" mandatory="yes" />
			<field name="language" mandatory="yes" />
			
			<!-- collections -->
			<field name="collection_title" mandatory="no" />
			<field name="collection_sequence_nr" mandatory="no" />
			
			<!-- dates -->
			<field name="completed_year" mandatory="yes" /> <!-- either "completed_year" or "completed_date" must be mandatory -->
			<field name="completed_date" mandatory="yes" />
			<field name="published_year" mandatory="yes" /> <!-- either "published_year" or "published_date" must be mandatory -->
			<field name="published_date" mandatory="yes" />
			<field name="date_accepted" mandatory="yes" />

			<!-- identifiers -->
			<field name="identifier_isbn" mandatory="no" />
			
			<!-- institutes -->
			<field name="institute_name" mandatory="yes" />
			<field name="non_institute_affiliation" mandatory="no" />
			
			<!-- persons -->
			<field name="person_advisor" mandatory="yes" />
			<field name="person_author" mandatory="yes" />
			<field name="person_author_email" mandatory="yes" />
			<field name="person_other" mandatory="no" />
			<field name="person_referee" mandatory="no" />
			
			<!-- titles  -->
			<field name="title_abstract" mandatory="yes" type="title_abstract"/>
			<field name="title_main" mandatory="yes"     type="title_abstract_main"/>
			<field name="title_parent" mandatory="no"    type="title_abstract_parent"/>
			
			<!-- subjects -->
			<field name="subject_swd" mandatory="yes" />
			<field name="subject_ddc" mandatory="no" />
			<field name="subject_uncontrolled" mandatory="yes" />
			
       </form>
	                 
</doctoral_thesis>
