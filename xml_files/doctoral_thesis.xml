<doctoral_thesis>

	<!-- general -->
	<field name="document_type" mandatory="yes" />
	<field name="licences" mandatory="yes" />
	<field name="language" mandatory="yes" />
	
	<!-- collections -->
	<field name="collection_title" mandatory="no" />
	<field name="collection_sequence_nr" mandatory="no" />
	
	<!-- dates -->
	<field name="completed_year" mandatory="yes" /> <!-- either "completed_year" or "completed_date" must be mandatory -->
	<field name="completed_date" mandatory="yes" />
	<field name="published_year" mandatory="yes" /> <!-- either "published_year" or "published_date" must be mandatory -->
	<field name="published_date" mandatory="yes" />
	<field name="date_accepted" mandatory="yes" />
	
	<!-- identifiers -->
	<field name="identifier_isbn" mandatory="no" type="identifier_isbn" />
	
	<!-- institutes -->
	<field name="institute_name" mandatory="yes" />
	<field name="non_institute_affiliation" mandatory="no" />
	
	<!-- persons -->
	<field name="person_advisor" mandatory="yes" type="person_advisor" />
	<field name="person_author" mandatory="yes" type="person_author" />
	<field name="person_other" mandatory="no" type="person_other" />
	<field name="person_referee" mandatory="no" type="person_referee" />
	
	<!-- titles  -->
	<field name="title_abstract" mandatory="yes" type="title_abstract" />
	<field name="title_main" mandatory="yes" type="title_main" />
	<field name="title_parent" mandatory="no" type="title_Sparent" />
	
	<!-- subjects -->
	<field name="subject_swd" mandatory="yes" type="subject_swd" />
	<field name="subject_ddc" mandatory="no" type="subject_ddc" />
	<field name="subject_uncontrolled" mandatory="yes" type="subject_uncontrolled" />

</doctoral_thesis>
