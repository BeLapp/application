<menu>
	
	<!-- General hints on the publication process. Documenttype and licence selection.   -->
	<page caption="publish">
	
		<field name="document_type" repeatable="no" language="no" />
		<field name="licence_type" repeatable="yes" language="no" />
		<field name="pod_allowed" repeatable="no" language="no" />
		<field name="language" repeatable="no" language="yes" />
		
	</page>
	
	
	<!-- Title and creator data -->
	<page caption="document">
		
		<!-- persons -->
		<field name="person_author" repeatable="yes" language="no" />
		<field name="person_author_email" repeatable="no" language="no" />
		<field name="person_advisor" repeatable="no" language="no" />
		<field name="person_referee" repeatable="yes" language="no" />
		<field name="person_other" repeatable="yes" language="no" />
		
		<!-- institutions -->
		<field name="institute_name" repeatable="yes" language="yes" />
		<field name="non_institute_affiliation" repeatable="yes" language="yes" />
		
		<!-- titles -->
		<field name="title_main" repeatable="yes" language="yes" />
		<field name="title_abstract" repeatable="yes" language="yes" />

	</page>
	
	
	<!-- Dates, subjects and classifications -->
	<page caption="content">
		
		<!-- dates -->
		<field name="completed_date" repeatable="no" language="no" />
		<field name="completed_year" repeatable="no" language="no" />
		<field name="published_date" repeatable="no" language="no" />
		<field name="published_year" repeatable="no" language="no" />
		<field name="date_accepted" subcaption="" repeatable="no" language="no" />
		
		<!-- subjects -->
		<field name="subject_swd" repeatable="yes" language="no" />
		<field name="subject_ddc" repeatable="yes" language="yes" />
		<field name="subject_uncontrolled" repeatable="yes" language="yes" />
		
	</page>
	
	
	<!-- Identifiers and collections -->
	<page caption="collections">
	
		<!-- identifiers -->
		<field name="identifier_isbn" repeatable="yes" language="no" />
			
		<!-- collections -->
		<field name="collection_title" repeatable="yes" language="yes" />
		<field name="collection_sequence_nr" repeatable="yes" language="no" />
		<field name="title_parent" repeatable="yes" language="yes" />
		
	</page>
	
	
	<!-- Upload interface. -->
	<page caption="upload">
	
		<!-- show upload interface with filemanager etc  -->
		
	</page>
	
	
	<!-- Preview,  control and confirmation. -->
	<page caption="preview">
	
		<!-- show all entered data and give possibility to correct or confirm it -->
		
	</page>
		
</menu>
