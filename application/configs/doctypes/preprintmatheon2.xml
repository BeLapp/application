<?xml version="1.0" encoding="UTF-8"?>
<documenttype name="preprint2" xmlns:opus="http://schemas.opus.org/documenttype"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://schemas.opus.org/documenttype ../../../opus4/framework/library/Opus/Document/documenttype.xsd">
	
    <field name="PersonAuthor" required="yes" formelement="text" datatype="Person" multiplicity="*" >
        <subfield name="Email" required="no" formelement="text" datatype="Email" />
        <subfield name="AcademicTitle" required="no" formelement="text" datatype="Text" >
            <default value="Dr." edit="yes" public="yes"  />
        </subfield>
        <subfield name="DateOfBirth" required="no" formelement="text" datatype="Date" />
        <subfield name="PlaceOfBirth" required="no" formelement="text" datatype="Text" />
    </field>
    
    <field name="Language" required="yes" formelement="select"  datatype="Language" multiplicity="1" >
        <opus:default value="eng" edit="yes" public="yes" />
        </field>
	
    <field name="Institute" formelement="select" required="yes"  datatype="Institute" multiplicity="*" />

    <field name="TitleMain" formelement="text" required="yes"  datatype="Title" multiplicity="4" />

    <field name="TitleAbstract" required="no" formelement="textarea"  datatype="Title" multiplicity="4">
        <required-if-fulltext/>
    </field>
	
    <field name="Project" required="no" formelement="select" datatype="Project" multiplicity="*" />

    <field name="SubjectMSC" required="yes" formelement="text"  datatype="msc" multiplicity="5" />

    <field name="Licence" required="yes" formelement="select" datatype="Licence" multiplicity="1" />
	
	<!-- fÃ¼r Keywords -->
    <field name="SubjectUncontrolled" required="no" formelement="text"  datatype="Text" multiplicity="5" />
	
    <field name="Note" required="no" formelement="textarea"  datatype="Text" multiplicity="1" />
		
</documenttype>
