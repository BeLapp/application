<div class="content">
    <?php if (!$this->isSimpleList) include('facetsMenu.phtml'); ?>
    <div id="searchbar">
        <div class="breadcrumb_results">
            <?php if (!isset($this->specialTitle) || $this->browsing) : ?>
                <h3><?= $this->numOfHits . ' ' . ($this->numOfHits === 1 ? $this->translate('results_title_single') : $this->translate('results_title')); ?></h3>
            <?php endif ?>
            <?php if (!$this->isSimpleList) include('pagination.phtml'); ?>
        </div>
        <?php if (!$this->isSimpleList) include('searchOptions.phtml'); ?>
        <?php if (!is_null($this->results)) : ?>
            <div id="search_results" class="search_results">
                <?php $rowCount = 0; ?>
                <?php foreach($this->results as $result) :?>
                    <dl class="result_box <?= $rowCount++ % 2 === 0 ? 'even' : 'odd'; ?>">
                        <?php
                            $frontdoorUrl = array(
                                'module' => 'frontdoor',
                                'controller' => 'index',
                                'action' => 'index',
                                'docId' => $result->getId());
                        ?>
                        <?php if (!is_null($result->getSeriesNumber())) : ?>
                            <dt class="results_seriesnumber"><?= htmlspecialchars($result->getSeriesNumber()); ?></dt>
                        <?php endif ?>
                        <dt class="results_title">
                            <?php if ($this->jQueryEnabled()) : ?>
                                <?php if (!is_null($result->getAbstract())) : ?>
                                    <img src="<?= $this->layoutPath() ?>/img/theme/icon-on-off.png" alt="<?= $this->translate('results_hideabstract_alt') ?>" title="<?= $this->translate('results_hideabstract_title') ?>" onclick="$(function(){$('#abstractText_<?= $result->getId() ?>').toggle();});" />
                                <?php endif ?>
                            <?php endif ?>
                            <?php if (!is_null($result->getTitle())) : ?>
                                <a href="<?= $this->url($frontdoorUrl, null, true) ?>"><?= htmlspecialchars($result->getTitle()); ?></a>
                            <?php else: ?>
                                <a href="<?= $this->url($frontdoorUrl, null, true) ?>"><?= $this->translate('results_missingtitle') ?></a>
                            <?php endif ?>
                            <?php if ($result->getYear()) : ?>
                                (<?= htmlspecialchars($result->getYear()); ?>)
                            <?php endif ?>
                        </dt>
                        <?php if (!is_null($result->getAuthors())) : ?>
                            <dt class="results_author">
                                <?php foreach($result->getAuthors() as $author) :
                                   $authorSearch = $this->authorSearch;
                                   $authorSearch['author'] = '"'.$author.'"';
                                ?>
                                    <a href="<?= $this->url($authorSearch, null, true); ?>"><?= htmlspecialchars($author) ?></a>
                                <?php endforeach ?>
                            </dt>
                        <?php endif ?>
                        <dd class="abstractText" id="abstractText_<?= $result->getId() ?>"><?= htmlspecialchars($result->getAbstract()) ?></dd>
                    </dl>
                <?php endforeach ?>
            </div>
        <?php endif ?>
        <div class="breadcrumb_results">
            <?php if (!$this->isSimpleList) include('pagination.phtml') ?>
        </div>
    </div>
