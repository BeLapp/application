$fc = Zend_Controller_Front::getInstance();
$basePath = $fc->getRequest()->getBasePath();
$config = Zend_Registry::get('Zend_Config');
$jsEnabled = isset($config->javascript->jquery->path);
if($jsEnabled) {
    $startUpScript = '$(document).ready(function() { init_searchresults(); });';
    $this->headScript()
        ->appendFile($basePath . '/layouts/opus4/js/jquery-1.4.2.min.js')
        ->appendScript($startUpScript);
}
?>
<?php if($jsEnabled) : ?>
<script type="text/javascript">
    function init_searchresults() {
        <?php foreach($this->results as $result) :?>
            $('#<?= $result->getId() ?>').hide();
        <?php endforeach ?>
    }
</script>
<?php endif ?>

<?php if (isset($this->specialTitle)) : ?>
<h1><?= htmlspecialchars($this->translate($this->specialTitle)) ?></h1>
<?php endif ?>

<?php
    if ($this->searchType === 'simple' && !$this->browsing)
        include('simpleSearchForm.phtml');
    else if(($this->searchType === 'advanced' || $this->searchType === 'authorsearch') && !$this->browsing)
        include('advancedSearchForm.phtml');
    else if($this->searchType === 'latest')
        include('latestDocsForm.phtml');
    else if ($this->searchType === 'collection')
        include('browsecollection.phtml');
?>

<?php if (!isset($this->specialTitle)) : ?>
<h3><?= $this->numOfHits . ' ' . ($this->numOfHits === 1 ? $this->translate('results_title_single') : $this->translate('results_title')); ?></h3>
<?php endif ?>

<?php
    if ($this->isSimpleList === false) {
        if ($this->searchType === 'collection') {
            include('searchOptions.phtml');
            include('pagination.phtml');
        }
        else {
            include('searchOptions.phtml');
            include('pagination.phtml');
            include('facetsMenu.phtml');
        }
    }
?>

<div id="search_results" class="search_results">

    <?php $rowCount = 0; ?>
    <?php foreach($this->results as $result) :?>
        <div class="result_box <?= $rowCount++ % 2 === 0 ? 'even' : 'odd'; ?>">
            <?php
                $frontdoorUrl = array(
                    'module' => 'frontdoor',
                    'controller' => 'index',
                    'action' => 'index',
                    'docId' => $result->getId());
            ?>
            <?php if($jsEnabled) : ?>
            <img src="<?= $basePath . '/layouts/opus4/img/page_white_text.png' ?>" alt="Show/Hide Details" title="Click here to expand or collapse the abstract text" onclick="$(function(){$('#<?= $result->getId() ?>').toggle();});" />
            <?php endif ?>

            <span class="results_title"><a href="<?= $this->url($frontdoorUrl, null, true) ?>"><?= htmlspecialchars($result->getTitle()); ?></a> (<?= htmlspecialchars($result->getYear()); ?>)</span><br/>

            <?php if(!is_null($result->getAuthors())) : ?>
                <?php foreach($result->getAuthors() as $author) :
                    $authorSearch = $this->authorSearch;
                    $authorSearch['author'] = '"'.$author.'"';
                ?>
                <a href="<?= $this->url($authorSearch, null, true); ?>"><?= htmlspecialchars($author) ?></a>
                <?php endforeach ?>
            <?php endif ?>

            <div class="abstract">
                <div class="abstractText" id="<?= $result->getId() ?>">
                    <?= htmlspecialchars($result->getAbstract()) ?>
                </div>
            </div>
        </div>
    <?php endforeach ?>
</div>

<?php if(!$this->isSimpleList) : ?>
<?php include('pagination.phtml') ?>
<?php endif ?>