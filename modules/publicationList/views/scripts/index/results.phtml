<div id="publication_lists" class="search_results">
<h3><?= htmlspecialchars($this->name) ?></h3>
<?php $rowCounter=0 ?>
<table cellspacing="0">
<?php foreach($this->results as $result) :?>
    <tr class="year"> <td colspan="4"><h4><?= htmlspecialchars($result->getYear()) ?></h4></td></tr>
    <?php foreach($result->getPublicationList() as $publication) :?>
    <tr class="<?= $rowCounter++ % 2 === 0 ? 'even' : 'odd'; ?>">
        <!-- Spalte1: Autoren -->
        <td class="first" valign="top">
            <?php if(!count($publication->getAuthors()) == 0) : ?>
                <?php $authorCounter=0 ?>
                <?php foreach($publication->getAuthors() as $author) :?>
                    <?php $authorCounter++ ?>
                    <?php if(!is_null($author->getUrl())) : ?>
                        <a href="<?= $author->getUrl() ?>">
                        <?= htmlspecialchars($author->getFirstName()) ?>
                        <?= $author->getLastName() ?></a>
                    <?php endif ?>
                    <?php if(is_null($author->getUrl())) : ?>
                            <?= htmlspecialchars($author->getFirstName()) ?> <?= htmlspecialchars($author->getLastName()) ?>
                    <?php endif ?>
                    <?php if($authorCounter < count($publication->getAuthors())) : ?>,<?php endif ?>
                <?php endforeach ?>
            <?php endif ?>
        </td>

        <!-- Spalte TitleMain -->
        <td class="second" valign="top">
            <?php if(!is_null($publication->getTitleMain())) : ?>
                <b><?= htmlspecialchars($publication->getTitleMain()) ?></b>
            <?php endif ?>
        </td>

        <!-- Spalte weiter bibliografische Angaben -->
        <td class="third" valign="top">
             <?php
                if ($publication->getDocType() === 'article')
                    include('article.phtml');

                else if ($publication->getDocType() === 'book')
                    include('book.phtml');

                else if ($publication->getDocType() === 'bookpart')
                    include('bookpart.phtml');

                else if ($publication->getDocType() === 'conferenceobject')
                    include('conferenceobject.phtml');

                else if ($publication->getDocType() === 'doctoralthesis')
                    include('doctoralthesis.phtml');

                else if ($publication->getDocType() === 'masterthesis')
                    include('masterthesis.phtml');
                
                else if ($publication->getDocType() === 'misc')
                    include('misc.phtml');

                else if ($publication->getDocType() === 'preprint')
                    include('preprint.phtml');

                else if ($publication->getDocType() === 'report')
                    include('report.phtml');

                else {
                    include('misc.phtml');
                }
            ?>
        </td>

        <td class="fourth" valign="top">
            <?php if(!is_null($publication->getBibtexUrl())) : ?>
                <a href="<?= $publication->getBibtexUrl() ?>">
                    <?php if(!is_null($publication->getImageBibtex())) : ?>
                        <img src="<?= $publication->getImageBibtex() ?>"/>
                    <?php endif ?>
                    <?php if(is_null($publication->getImageBibtex())) : ?>BibTeX<?php endif ?>
                </a>
            <?php endif ?>
            <?php if(!is_null($publication->getRisUrl())) : ?>
                <a href="<?= $publication->getRisUrl() ?>">
                    <?php if(!is_null($publication->getImageRis())) : ?>
                         <img src="<?= $publication->getImageRis() ?>"/>
                    <?php endif ?>
                    <?php if(is_null($publication->getImageRis())) : ?>RIS<?php endif ?>
                </a>
            <?php endif ?>
            <br/>
            <?php if(!is_null($publication->getPdfUrl())) : ?>
                <a href="<?= $publication->getPdfUrl() ?>">
                   <?php if(!is_null($publication->getImagePdf())) : ?>
                        <img src="<?= $publication->getImagePdf() ?>"/>
                    <?php endif ?>
                    <?php if(is_null($publication->getImagePdf())) : ?>PDF<?php endif ?>
                </a>
            <?php endif ?>
            <?php if(is_null($publication->getPdfUrl()) && !is_null($publication->getPsUrl())) : ?>
                <a href="<?= $publication->getPsUrl() ?>">
                   <?php if(!is_null($publication->getImagePdf())) : ?>
                        <img src="<?= $publication->getImagePdf() ?>"/>
                    <?php endif ?>
                    <?php if(is_null($publication->getImagePdf())) : ?>PS<?php endif ?>
                </a>
            <?php endif ?>
            <?php if(!is_null($publication->getDoiUrl())) : ?>
                <a href="<?= $publication->getDoiUrl() ?>">
                   <?php if(!is_null($publication->getImageDoi())) : ?>
                        <img src="<?= $publication->getImageDoi() ?>"/>
                    <?php endif ?>
                    <?php if(is_null($publication->getImageDoi())) : ?>DOI<?php endif ?>
                </a>
            <?php endif ?>
        </td>
    </tr>
     <?php endforeach ?>
<?php endforeach ?>	 
</table>
</div>