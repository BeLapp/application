            <span class="form-submit-wrapper">
                <input type="submit" name="cancel_button" class="form-submit" value="<?= $this->translate('access_button_cancel') ?>"/>
            </span>
        </div>
        
        <input type="hidden" name="roleid" value="<?= $this->roleId ?>" />
    </form>
