<h1><?php echo $this->translate('admin_documents_index'); ?></h1>

<?php
foreach ($this->registers as $register) {
	?>
	<a href="<?=$register[0] ?>"><?php echo $this->translate($register[1]); ?></a> | 
	<?php
}

$documentList = $this->documentList;
if (false === empty($documentList)) { ?>
<p>
<ol>
    <?php foreach ($documentList as $docId => $title) {
        if (true === empty($title)) {
            $title = array(0 => 'Opus document with id: ' . $docId);
        }
        $url_edit = array(
            'module' => 'admin',
            'controller' => 'documents',
            'action' => 'edit',
            'id' => $docId
        );
        $url_delete = array (
            'module' => 'admin',
            'controller' => 'documents',
            'action' => 'delete',
        );
        $url_edit = $this->url($url_edit, 'default', true);
        $url_delete = $this->url($url_delete, 'default', true);
    ?>
        <li>
        <?php echo current($title) ?>
        <form action="<?php echo $url_delete ?>" method="post" class="crud">
            <a href="<?php echo $url_edit ?>"><?php echo $this->translate('docs_edit'); ?></a>
            <input type="hidden" name="id" value="<?php echo $docId ?>" />
            <input type="submit" value="<?php echo $this->translate('docs_delete'); ?>" />
        </form>
        </li>
        <?php
    } ?>
</ol>
</p>
<?php } else { ?>
    <p><?php echo $this->translate('docs_no_documents'); ?></p>
<?php } ?>
