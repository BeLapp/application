                ?><?= $link['label'] 
            ?><?PHP endif; 
        ?><?PHP endif; ?>
        <?PHP endforeach; ?>
    </div>
</div>

<?= $this->paginationControl($this->paginator, 'Sliding', 'results_pagination.phtml') ?>

