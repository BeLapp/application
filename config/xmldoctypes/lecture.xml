<documenttype name="lecture"
	xmlns="http://schemas.opus.org/documenttype"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- general -->
	<field name="Licence" mandatory="yes" />
	<field name="Language" mandatory="yes" />
	<field name="File" multiplicity="*" />
	<field name="Source" />
	<field name="Note" mandatory="yes" multiplicity="4" />
    <field name="ServerDateModified" />
    <field name="ServerDatePublished" />
    <field name="ServerDateUnlocking" />
    <field name="ServerDateValid" />  
    <field name="IdentifierOpus3" />  

    <!-- collections  -->
    
    <!-- corporate bodies  -->
    <!-- NOTE: could not used as multi values -->
    <field name="CreatingCorporation" />
    <field name="ContributingCorporation" />
    
	<!-- dates -->
	<mandatory type="one-at-least">
		<field name="PublishedYear" />
		<field name="PublishedDate" />
	</mandatory>

	<!-- institutes -->
	<!--  <field name="Institute" mandatory="yes" multiplicity="3" /> -->
	<field name="NonInstituteAffiliation" />

	<!-- persons -->
    <mandatory type="one-at-least">
       <field name="PersonAuthor" multiplicity="3" />
       <!-- <field name="PersonEditor" multiplicity="3" /> -->
    </mandatory>
	<field name="PersonAdvisor" multiplicity="4" />
	<field name="PersonContributor" multiplicity="4" />
	<field name="PersonEditor" multiplicity="4" />
	<field name="PersonOther" multiplicity="4" />
	<field name="PersonReferee" multiplicity="4" />
	<field name="PersonTranslator" />

     <!-- publishers  -->
    <!-- <field name="PublisherName" />  -->
    <!-- <field name="PublisherPlace" />  -->
    <field name="PublisherUniversity" />
 
    <!-- subjects -->
    <field name="SubjectSwd" multiplicity="4" />
        <!-- Nicht in document_subjects, sondern in Collection abgebildet-->
        <!-- <field name="SubjectDdc" multiplicity="4" /> -->
    <field name="SubjectPsyndex" multiplicity="4" />
    <field name="SubjectUncontrolled" multiplicity="4" />
    
    <!-- titles  -->
    <field name="TitleAbstract" mandatory="yes" multiplicity="2" />
    <field name="TitleMain" mandatory="yes" multiplicity="2" />
        
</documenttype>