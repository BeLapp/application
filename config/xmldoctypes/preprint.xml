<?xml version="1.0" encoding="UTF-8"?>
<opus:documenttype name="preprint" xmlns:opus="http://schemas.opus.org/documenttype" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://schemas.opus.org/documenttype ../../../opus4/framework/library/Opus/Document/documenttype.xsd">
	
	<opus:field name="PersonAuthor" required="yes" formelement="text" datatype="Person" multiplicity="*" />
	<opus:field name="Language" required="yes" formelement="text"  datatype="Alpha" multiplicity="1"/>
	<!-- wird implementiert, sobald die Institutstabelle existiert!
	<opus:field name="Institute" formelement="textarea" required="yes"  datatype="Alpha" multiplicity="1" />-->
	<opus:field name="TitleMain" formelement="textarea" required="yes"  datatype="Title" multiplicity="4" />

	<opus:field name="TitleAbstract" required="no" formelement="textarea"  datatype="Title" multiplicity="4">
		<opus:required-if-fulltext/>
    </opus:field>
	
	<opus:field name="PersonReferee" required="yes" formelement="text" datatype="Person" multiplicity="*" />
	<opus:field name="Project" required="no" formelement="text" datatype="Text" multiplicity="*" />

	<opus:field name="SubjectMSC" required="yes" formelement="text"  datatype="Text" multiplicity="5" />
	
	<!-- fÃ¼r Keywords -->
	<opus:field name="SubjectUncontrolled" required="yes" formelement="text"  datatype="Text" multiplicity="5" />    
	
	<opus:field name="Note" required="no" formelement="textarea"  datatype="Text" multiplicity="1" />
		
</opus:documenttype>
