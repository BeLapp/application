<documenttype name="doctype_for_discussion_reasons"
	xmlns="http://schemas.opus.org/documenttype"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <!-- administrative and technical data -->
    <field name="Enrichment" />
    <field name="Note" />
        <!--  Auslagern in Security? -->
        <field name="IdentifierOpac" />
    <field name="ServerDateModified" />
    <field name="ServerDatePublished" />
    <field name="ServerDateUnlocking" />
    <field name="ServerDateValid" />    
    <!-- Was ist das fuer ein Datenbankfeld? Ist noch nirgendwo eingebunden... OM 03.04.09 -->
    <!-- <field name="PublicationVersion" /> -->
        <!--  Existiert rein zu Abwärtskompatibilitäts- und Migrationszwecken -->
        <field name="IdentifierOpus3" />
	    <field name="Source" />	    
	    <!--  Auslagern in Identifiers oder References? -->
        <field name="IdentifierOpac" />
        <!--  Ergebnisse von METIS noch unklar -->
        <!-- <field name="VgWortPixelUrl" /> -->
        
         

	<!-- general -->
		<!--  Multiplicity noch nicht möglich -->
		<field name="Licence" mandatory="yes" multiplicity="4" />
		<!--  Multiplicity noch nicht möglich -->
		<field name="Language" mandatory="yes" multiplicity="4" />
	<field name="File" multiplicity="*" />
	
	
    <!-- collections  -->
        <!-- Noch nicht möglich -->
        <!-- <field name="Collection" /> -->
    
    
    <!-- corporate bodies  -->
    <field name="CreatingCorporation" />
    <field name="ContributingCorporation" />
    
    
    <!-- dates: user input -->
	<field name="CompletedYear" />
	<field name="CompletedDate" />
	<field name="DateAccepted" />
	<field name="PublishedYear" />
	<field name="PublishedDate" />
	
	
    <!-- extent, pages, issue, volume, edtion -->
    <field name="Edition" />
    <field name="Issue" />
    <field name="PageFirst" />
    <field name="PageLast" />
    <field name="PageNumber" />
    <field name="Volume" />
    	
    	
	<!-- identifiers -->
	<field name="IdentifierIsbn" multiplicity="4" />
	<field name="IdentifierUrn" multiplicity="4" />
	<field name="IdentifierDoi" multiplicity="4" />
	<field name="IdentifierHandle" multiplicity="4" />
	<field name="IdentifierUrl" multiplicity="4" />
	<field name="IdentifierIssn" multiplicity="4" />
	<field name="IdentifierStdDoi" multiplicity="4" />
	<field name="IdentifierCrisLink" multiplicity="4" />
	<field name="IdentifierSplashUrl" multiplicity="4" />


	<!-- references -->
	<field name="ReferenceIsbn" multiplicity="4" />
	<field name="ReferenceUrn" multiplicity="4" />
	<field name="ReferenceDoi" multiplicity="4" />
	<field name="ReferenceHandle" multiplicity="4" />
	<field name="ReferenceUrl" multiplicity="4" />
	<field name="ReferenceIssn" multiplicity="4" />
	<field name="ReferenceStdDoi" multiplicity="4" />
	<field name="ReferenceCrisLink" multiplicity="4" />
	<field name="ReferenceSplashUrl" multiplicity="4" />

	<!-- institutes -->
	   <!-- Noch nicht möglich -->
	   <!-- <field name="Institute" /> -->
	   <!-- Zweck? -->
	   <field name="NonInstituteAffiliation" />


    <!-- patent information -->
    <field name="Patent" />


	<!-- persons -->
	<field name="PersonAdvisor" multiplicity="4" />
	<field name="PersonAuthor" multiplicity="4" />
	<field name="PersonContributor" multiplicity="4" />
	<field name="PersonEditor" multiplicity="4" />
	<field name="PersonOther" multiplicity="4" />
	<field name="PersonReferee" multiplicity="4" />
	<field name="PersonTranslator" />
	
	
	<!-- publication process, version control, reviewing, workflow  -->
	   <!-- ??? -->
       <!-- <field name="Publication" /> -->
	   <!-- Ist im DB Schema als PublicationState bezeichnet -->
	   <!-- <field name="PublicationStatus" /> -->
	<field name="Reviewed" />
	

    <!-- publishers  -->
        <field name="PublisherName" />
        <field name="PublisherPlace" />
        <field name="PublisherUniversity" />
        
    
    <!-- subjects -->
    <field name="SubjectSwd" multiplicity="4" />
        <!-- Nicht in document_subjects, sondern in Collection abgebildet-->
        <!-- <field name="SubjectDdc" multiplicity="4" /> -->
    <field name="SubjectPsyndex" multiplicity="4" />
    <field name="SubjectUncontrolled" multiplicity="4" />
    
    
	<!-- titles  -->
	<field name="TitleAbstract" multiplicity="4" />
	<field name="TitleMain" mandatory="yes" multiplicity="4" />
	<field name="TitleParent" mandatory="yes" multiplicity="4" />

</documenttype>
