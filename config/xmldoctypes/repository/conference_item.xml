<documenttype name="conference_item"
    xmlns="http://schemas.opus.org/documenttype"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <page caption="caption_01_conferenceitem">
        <field name="Licence" mandatory="yes" adminformweight="1" publishformweight="101" multiplicity="1" />
        <field name="Language" mandatory="yes" adminformweight="1" publishformweight="102" multiplicity="1"/>
        <field name="File" mandatory="no" adminformweight="0" publishformweight="0" multiplicity="*" />
        
        <field name="ServerDateUnlocking" mandatory="no" adminformweight="0" publishformweight="201" multiplicity="1" />
        <!-- <field name="ServerDateValid" mandatory="no" adminformweight="0" publishformweight="202" multiplicity="1" /> -->   
                
        <!-- for downward compatibility to opus 3 data. Do not show this fields -->     
        <field name="IdentifierOpus3" mandatory="no" adminformweight="1" publishformweight="0" multiplicity="1" />
    </page>

    <page caption="caption_02_conferenceitem">
        <field name="TitleMain" mandatory="yes" adminformweight="1" publishformweight="101" multiplicity="4" />
        <field name="TitleAbstract" mandatory="yes" adminformweight="1" publishformweight="102" multiplicity="4" />
        <field name="TitleParent" mandatory="no" adminformweight="1" publishformweight="103" multiplicity="1" />
    </page>
       
    <page caption="caption_03_conferenceitem">
        <field name="PersonAuthor" mandatory="yes" adminformweight="1" publishformweight="201" multiplicity="*" />
        <!-- <field name="PersonReferee" mandatory="no" adminformweight="1" publishformweight="203" multiplicity="*" /> -->
        <field name="PersonEditor" mandatory="no" adminformweight="1" publishformweight="204" multiplicity="*" />
        <field name="PersonTranslator" mandatory="no" adminformweight="1" publishformweight="205" multiplicity="*" />
        <field name="PersonContributor" mandatory="no" adminformweight="1" publishformweight="206" multiplicity="*" />

        <field name="CreatingCorporation" mandatory="no" adminformweight="1" publishformweight="207" multiplicity="*" />
        <field name="ContributingCorporation" mandatory="no" adminformweight="1" publishformweight="208" multiplicity="*"/>

        <field name="PublisherName" mandatory="no" adminformweight="1" publishformweight="209" multiplicity="1" />
        <field name="PublisherPlace" mandatory="no" adminformweight="1" publishformweight="210" multiplicity="1"/>
        
        
        <!-- TODO implement it -->
        <!--<field name="Institute" mandatory="no" adminformweight="1" publishformweight="302" multiplicity="*" />-->
        
    </page>

    <page caption="caption_04_conferenceitem">      
        <!-- <field name="PageNumber" mandatory="no" adminformweight="1" publishformweight="105" multiplicity="1" /> -->
        <field name="PageFirst" mandatory="no" adminformweight="1" publishformweight="106" multiplicity="1" />
        <field name="PageLast" mandatory="no" adminformweight="1" publishformweight="107" multiplicity="1" />
        <!--  <mandatory type="one-at-least"> -->
            <!--  <field name="CompletedYear" adminformweight="1" publishformweight="402" multiplicity="1" /> -->
            <!--  <field name="CompletedDate" adminformweight="1" publishformweight="403" multiplicity="1" /> -->
        <!-- </mandatory> -->
        <mandatory type="one-at-least">
            <field name="PublishedYear" adminformweight="1" publishformweight="404" multiplicity="1" />
            <!-- <field name="PublishedDate" adminformweight="1" publishformweight="405" multiplicity="1" /> -->
        </mandatory>
    </page>

    <page caption="caption_05_conferenceitem">
        <field name="SubjectSwd" mandatory="no" adminformweight="1" publishformweight="401" multiplicity="5" />
        <field name="SubjectUncontrolled" mandatory="yes" adminformweight="1" publishformweight="403" multiplicity="5" />
        <!-- TODO implement it - derzeit Fehlermeldung Specified column "collection" is not in the row -->
        <!--<field name="Collection" mandatory="no" adminformweight="1" publishformweight="404" multiplicity="*" />-->
    </page>
        
    
    <page caption="caption_06_conferenceitem">

        <!-- TODO implement it -->
        <!--<field name="Conference" mandatory="yes" adminformweight="1" publishformweight="201" multiplicity="1" />-->
        
        <field name="IdentifierUrn" mandatory="no" adminformweight="1" publishformweight="202" multiplicity="1" />
        <field name="IdentifierOpac" mandatory="no" adminformweight="1" publishformweight="0" multiplicity="1" />
        
        <field name="Note" mandatory="no" adminformweight="1" publishformweight="301" multiplicity="1" />
    </page>

</documenttype>
