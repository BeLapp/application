<documenttype name="conference"
	xmlns="http://schemas.opus.org/documenttype"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
	<page caption="caption_01_conference">
		<field name="PersonSubmitter" mandatory="yes" adminformweight="101" publishformweight="101" multiplicity="1" />
		<field name="Licence" mandatory="yes" adminformweight="102" publishformweight="101" multiplicity="1" />
		<field name="Language" mandatory="yes" adminformweight="103" publishformweight="102" multiplicity="1"/>
		<field name="File" mandatory="no" adminformweight="0" publishformweight="0" multiplicity="*" />
		
		<field name="ServerDateUnlocking" mandatory="no" adminformweight="101" publishformweight="103" multiplicity="1" />
	    <!-- <field name="ServerDateValid" mandatory="no" adminformweight="0" publishformweight="202" multiplicity="1" />  -->   
	    	    
	    <!-- for downward compatibility to opus 3 data. Do not show this fields -->	    
	    <field name="IdentifierOpus3" mandatory="no" adminformweight="699" publishformweight="0" multiplicity="1" />
	</page>

	<page caption="caption_02_conference">
        <field name="TitleMain" mandatory="yes" adminformweight="201" publishformweight="201" multiplicity="4" />
        <field name="TitleAbstract" mandatory="yes" adminformweight="202" publishformweight="202" multiplicity="4" />
    </page>
	   
	<page caption="caption_03_conference">
		<field name="PersonAuthor" mandatory="no" adminformweight="301" publishformweight="301" multiplicity="*" />
		<!-- <field name="PersonReferee" mandatory="no" adminformweight="302" publishformweight="302" multiplicity="*" /> -->
		<field name="PersonEditor" mandatory="no" adminformweight="303" publishformweight="303" multiplicity="*" />
		<!-- <field name="PersonTranslator" mandatory="no" adminformweight="304" publishformweight="304" multiplicity="*" />  -->
		<field name="PersonContributor" mandatory="no" adminformweight="305" publishformweight="305" multiplicity="*" />

        <field name="CreatingCorporation" mandatory="no" adminformweight="306" publishformweight="306" multiplicity="*"/>
        <field name="ContributingCorporation" mandatory="no" adminformweight="307" publishformweight="307" multiplicity="*"/>
        
        
		<!-- TODO implement it -->
		<!-- <field name="Institute" mandatory="no" adminformweight="1" publishformweight="302" multiplicity="*" /> -->
    </page>

	<page caption="caption_04_conference">	    
        <field name="PublisherName" mandatory="no" adminformweight="401" publishformweight="401" multiplicity="1" />
        <field name="PublisherPlace" mandatory="yes" adminformweight="402" publishformweight="402" multiplicity="1"/>

        <field name="PageNumber" mandatory="no" adminformweight="403" publishformweight="403" multiplicity="1" />
        <!-- <mandatory type="one-at-least">  -->
            <!-- <field name="CompletedYear" adminformweight="404" publishformweight="404" multiplicity="1" /> -->
            <!-- <field name="CompletedDate" adminformweight="405" publishformweight="405" multiplicity="1" /> -->
        <!-- </mandatory> -->
        <mandatory type="one-at-least">
            <field name="PublishedYear" adminformweight="406" publishformweight="406" multiplicity="1" />
            <!-- <field name="PublishedDate" adminformweight="407" publishformweight="407" multiplicity="1" /> -->
        </mandatory>
    </page>

	<page caption="caption_05_conference">
	    <field name="SubjectSwd" mandatory="yes" adminformweight="501" publishformweight="501" multiplicity="5" />
	    <field name="SubjectUncontrolled" mandatory="no" adminformweight="502" publishformweight="502" multiplicity="5" />
	    <!-- TODO implement it - derzeit Fehlermeldung Specified column "collection" is not in the row -->
	    <!--<field name="Collection" mandatory="no" adminformweight="1" publishformweight="404" multiplicity="*" />-->
    </page>
	    
    
    <page caption="caption_06_conference">
        <field name="IdentifierIsbn" mandatory="no" adminformweight="601" publishformweight="601" multiplicity="2" />	
        <field name="IdentifierIssn" mandatory="no" adminformweight="602" publishformweight="602" multiplicity="1" />	
        <field name="IdentifierUrn" mandatory="no" adminformweight="603" publishformweight="603" multiplicity="1" />
        <field name="IdentifierOpac" mandatory="no" adminformweight="604" publishformweight="0" multiplicity="1" />
        
        <field name="Note" mandatory="no" adminformweight="701" publishformweight="701" multiplicity="1" />
    </page>

</documenttype>
