<opus:documenttype name="studienarbeit" 
	xmlns:opus="http://schemas.opus.org/documenttype"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://schemas.opus.org/documenttype ../../../opus4/framework/library/Opus/Document/documenttype.xsd">

     <!--<opus:fieldgroup type="Person" name="submitter" datatype="Person" multiplicity="1" required="yes">
        <opus:subfield name="FirstName" required="no"  formelement="text"/>
	<opus:subfield name="LastName" required="yes" formelement="text" />
	<opus:subfield name="Email" required="no" formelement="text" />
	<opus:subfield name="AcademicTitle" formelement="text" required="no" />
	<opus:subfield name="Birthday" formelement="text" datatype="Date" required="no" />
	<opus:subfield name="BirthPlace" formelement="text" required="no" />
     </opus:fieldgroup>-->
    <opus:field name="PersonSubmitter" required="yes" formelement="text" datatype="Person" multiplicity="1" />
    <opus:field name="PersonAuthor" required="yes" formelement="text" datatype="Person" multiplicity="*" />
    <opus:field name="TitleMain" formelement="textarea" required="yes"  datatype="Text" multiplicity="4" />
    <opus:field name="Language" required="yes" formelement="text"  datatype="Alpha" multiplicity="1"/>
    <opus:field name="PublishedYear" required="yes" formelement="text"  datatype="Year" multiplicity="1" />
    <opus:field name="SubjectSwd" required="yes" formelement="text"  datatype="Text" multiplicity="5" />    
    <opus:field name="IdentifierOpus3" formelement="text" required="no" datatype="Text" multiplicity="1" />
    <opus:field name="TitleAbstract" required="no" formelement="textarea"  datatype="Text" multiplicity="4">
        <opus:required-if-fulltext/>
    </opus:field>

    <opus:field name="Licence" required="no" formelement="text"  datatype="Text" multiplicity="1" >
        <opus:required-if-fulltext/>
    </opus:field>
    <opus:field name="PersonAdvisor" required="no" formelement="text"  datatype="Person" multiplicity="2" />
    <opus:field name="PersonContributor" required="no" formelement="text"  datatype="Person" multiplicity="*" />
    <opus:field name="CreatingCorporation" required="no" formelement="text"  datatype="Text" multiplicity="*" />
    <opus:field name="ContributingCorporation" required="no" formelement="text"  datatype="Text" multiplicity="*"/>
    <opus:field name="PageNumber" required="no" formelement="text" datatype="Integer" multiplicity="1" />
    <opus:field name="IdentifierUrn" required="no" formelement="text"  datatype="Text" multiplicity="1" />
    <opus:field name="IdentifierOpac" required="no" formelement="text"  datatype="Text" multiplicity="1" />
    <opus:field name="Note" required="no" formelement="textarea"  datatype="Text" multiplicity="1" />
        
</opus:documenttype>
